# .editorconfig
# EditorConfig helps maintain consistent coding styles across editors/IDEs.
# More info: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown: allow trailing spaces for hard line breaks
[*.md]
trim_trailing_whitespace = false

# Rust: rustfmt will be the source of truth, but 4-space indent matches common expectations
[*.rs]
indent_size = 4

# TOML (Cargo.toml, etc.)
[*.toml]
indent_size = 2

# YAML
[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Makefile requires tabs
[Makefile]
indent_style = tab

# Batch files often expect CRLF on Windows if you ever add them
[*.{bat,cmd}]
end_of_line = crlf
indent_style = space
indent_size = 2

# PowerShell also tends to be happiest with CRLF on Windows
[*.ps1]
end_of_line = crlf
indent_style = space
indent_size = 2
